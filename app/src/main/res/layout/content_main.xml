<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ifrs.canoas.ifhelper.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem Vindo ao IFHelper"
            android:id="@+id/textView"
            android:textColor="@color/material_deep_teal_500" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de faltas"
            android:id="@+id/btCalculaFoto"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/textView"
            android:drawableLeft="@android:drawable/ic_menu_month"
            android:layout_weight="0"
            android:onClick="calculaFaltas" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portal do aluno"
            android:id="@+id/btPortalDoAluno"
            android:drawableLeft="@drawable/ic_school_red_24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendário Acadêmico"
            android:id="@+id/button" />
    </LinearLayout>

</RelativeLayout>
